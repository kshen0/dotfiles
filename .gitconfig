[user]
	name = Kevin Shen
	email = kwshen@gmail.com 

[color]
	ui = true
	interactive = true

[color "status"]
	added = green bold
	changed = red bold
	untracked = cyan

[color "diff"]
	meta = cyan bold
	old = red bold
	new = green bold
	frag = blue
	commit = yellow bold

[color "branch"]
	current = green bold
	local = bold
	remote = red bold

[color "grep"]
	match = cyan

[pager]
	color = true

[core]
	editor = vim
	pager = less -FXRS -x4

[merge]
	defaultToUpstream = true

[rebase]
	autosquash = true

[push]
	default = upstream

[diff]
	tool = vimdiff

[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
